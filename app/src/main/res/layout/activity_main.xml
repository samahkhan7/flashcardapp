<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcardQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="40sp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Who is the 44th President of the United States?"
        android:background="@drawable/card_front_background"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="10dp"
        />

    <TextView
        android:id="@+id/flashcardAnswer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="40sp"
        android:gravity="center"
        android:text="Barack Obama"
        android:visibility="invisible"
        android:background="@drawable/card_back_background"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:elevation="10dp"
        />

    <TextView
        android:id="@+id/multiplechoiceOne"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/nextButton"
        android:background="@color/bluesapphire"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35sp"
        android:elevation="10dp"
        android:text="Bill Clinton"
        />

    <TextView
        android:id="@+id/multiplechoiceTwo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/multiplechoiceOne"
        android:background="@color/bluesapphire"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35sp"
        android:elevation="10dp"
        android:text="Barack Obama"
        />

    <TextView
        android:id="@+id/multiplechoiceThree"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/multiplechoiceTwo"
        android:background="@color/bluesapphire"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35sp"
        android:elevation="10dp"
        android:text="Teddy Roosevelt"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/toggle_choices_visibility"
        android:src="@drawable/hidden_eye"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/plusButton"
        android:src="@drawable/plus_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/nextButton"
        android:src="@drawable/next_button"
        android:layout_alignParentRight="true"
        android:layout_below="@id/flashcardQuestion"
        />

</RelativeLayout>